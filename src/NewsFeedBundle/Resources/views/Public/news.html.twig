{% extends "NewsFeedBundle::base.html.twig" %}

{% block title %}NewsFeedBundle:Public:news{% endblock %}

{% block body %}
    <h1>NewsFeed</h1>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Img</th>
                    <th>Title</th>
                    <th>Text</th>
                    <th>User</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            {% for a in list %}
                <tr>
                    <td>{{a.id}}.</td>
                    <td><img class="news-img" src="{{asset('uploads/articles/' ~ a.photo)}}"/></td>
                    <td>{{a.title}}</td>
                    <td>{{a.text[:100]}}</td>
                    <td>{{a.user}}</td>
                    <td>{{a.updated|date('Y.m.d') }}</td>
                    <td>
                        <a href="{{path('public_view', {id: a.id})}}" class="btn btn-info">View</a>
                        <a href="{{path('public_pdf',  {id: a.id})}}" class="btn btn-info">PDF</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}




