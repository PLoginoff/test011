{% extends "NewsFeedBundle::base.html.twig" %}
{% block subject %}Registration{% endblock %}
{% block body %}
    {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
    <div class="form-group">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'Input your email...'} }) }}
        </div>
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-warning">
                Register!
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
