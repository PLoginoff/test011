<?xml version="1.0"?>
<ruleset name="Custom Standard">

    <config name="testVersion" value="5.6-7.0"/>

    <rule ref="PSR2"/>

    <rule ref="Generic.Arrays.DisallowLongArraySyntax.Found">
        <type>warning</type>
    </rule>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>web/*</exclude-pattern>
    <exclude-pattern>var/*</exclude-pattern>
    <exclude-pattern>logs/*</exclude-pattern>

    <exclude-pattern>app/cache/*</exclude-pattern>

    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>

    <exclude-pattern>app/AppCache.php</exclude-pattern>
    <exclude-pattern>app/AppKernel.php</exclude-pattern>
    <exclude-pattern>app/SymfonyRequirements.php</exclude-pattern>
    <exclude-pattern>app/check.php</exclude-pattern>
 
    <exclude-pattern>bin/*</exclude-pattern>
    <exclude-pattern>app/DoctrineMigrations/*</exclude-pattern>
</ruleset>
