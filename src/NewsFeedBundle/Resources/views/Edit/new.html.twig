{% extends "NewsFeedBundle:Edit:base.html.twig" %}
{% block title %}NewsFeedBundle:Edit:new{% endblock %}
{% block content %}
    {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
    <div class="form-group">
        <label class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            {{ form_widget(form.title, { 'attr': {'class': 'form-control', 'placeholder':'Title'} }) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Text</label>
        <div class="col-sm-10">
            {{ form_widget(form.text, { 'attr': {'class': 'form-control', 'placeholder':'Type text...'} }) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Photo</label>
        <div class="col-sm-10">
            {{ form_widget(form.photo, { 'attr': {'class': 'form-control', 'placeholder':'Photo...'} }) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-warning">
                {% trans %}Add article{% endtrans %}
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
