{% extends "NewsFeedBundle:Edit:base.html.twig" %}
{% block subject %}Your news{% endblock %}

{% block content %}
    <a class="btn btn-warning" href="{{path('edit_new')}}">
        Add new
    </a>
        
<div class="table-responsive">
  <table class="table table-hover">
    {% for a in list %}
        <tr>
            <td>{{a.id}}.</td>
            <td><img class="news-img" src="{{asset('uploads/articles/' ~ a.photo)}}"/></td>
            <td>{{a.title}}</td>
            <td>{{a.text[:100]}}</td>
            <td>{{a.updated|date('Y.m.d') }}</td>
            <td>
                <a class="btn btn-danger" href="{{path('edit_remove', {id:a.id})}}">
                    Remove
                </a>
            </td>
        </tr>
    {% endfor %}
  </table>
</div>

{% endblock %}
